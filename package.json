{
  "name": "linear-bot",
  "version": "1.0.0",
  "description": "A bot for Linear to help identify and resolve WIP constraints and other useful insights",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "setup": "bun run scripts/setup.ts",
    "sync": "bun run scripts/sync.ts",
    "reset-db": "bun run scripts/reset-db.ts",
    "release-prepare": "bun run scripts/release-prepare.ts",
    "release-prepare-patch": "bun run scripts/release-prepare.ts patch",
    "release-prepare-minor": "bun run scripts/release-prepare.ts minor",
    "release-prepare-major": "bun run scripts/release-prepare.ts major",
    "release-commit": "bun run scripts/release-commit.ts",
    "dev": "bun --bun vite dev",
    "build": "bun --bun vite build",
    "preview": "bun --bun vite preview",
    "start": "bun --bun run server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "@linear/sdk": "^35.0.0",
    "html2canvas": "^1.4.1",
    "lucide-svelte": "^0.554.0"
  },
  "lint-staged": {
    "*.{ts,js,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@internationalized/date": "^3.8.1",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/svelte": "^5.2.9",
    "@types/bun": "latest",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.1",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.43.14",
    "svelte-adapter-bun": "^1.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.17",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}
