{
  "name": "linear-bot",
  "version": "1.0.0",
  "description": "A bot for Linear to help identify and resolve WIP constraints and other useful insights",
  "type": "module",
  "scripts": {
    "setup": "bun run scripts/setup.ts",
    "start:cli": "bun run terminal/index.tsx",
    "dev:cli": "bun --watch terminal/index.tsx",
    "sync": "bun run scripts/sync.ts",
    "reset-db": "bun run scripts/reset-db.ts",
    "release-prepare": "bun run scripts/release-prepare.ts",
    "release-prepare-patch": "bun run scripts/release-prepare.ts patch",
    "release-prepare-minor": "bun run scripts/release-prepare.ts minor",
    "release-prepare-major": "bun run scripts/release-prepare.ts major",
    "release-commit": "bun run scripts/release-commit.ts",
    "dev": "bun --bun vite dev",
    "build": "bun --bun vite build",
    "preview": "bun --bun vite preview",
    "start": "bun --bun run server.js"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "@linear/sdk": "^35.0.0",
    "html2canvas": "^1.4.1",
    "ink": "^6.3.1",
    "ink-spinner": "^5.0.0",
    "lucide-svelte": "^0.554.0",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@internationalized/date": "^3.8.1",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/bun": "latest",
    "@types/react": "^19.2.2",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "svelte": "^5.43.14",
    "svelte-adapter-bun": "^1.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4"
  }
}
