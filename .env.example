# LinearBot Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Linear API key - get from https://linear.app/settings/api
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Password for web app authentication
APP_PASSWORD=your_secure_password_here

# =============================================================================
# OPTIONAL
# =============================================================================

# Comma-separated team keys to exclude from sync (e.g., CS,SUPPORT,OPS)
# Find team keys in issue identifiers like ENG-123 â†’ ENG
IGNORED_TEAM_KEYS=

# JSON mapping of team keys to domain names for grouping
# Example: {"FE":"Frontend","BE":"Backend","INFRA":"Platform"}
TEAM_DOMAIN_MAPPINGS=