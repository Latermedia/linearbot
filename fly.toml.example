# Fly.io configuration for linear-bot
# Single-node deployment with persistent database volume
#
# Copy this file to fly.toml and update with your app name and region
# Before deploying, create the volume:
#   fly volumes create linear_bot_data --region iad --size 1

app = "your-app-name"
primary_region = "iad"

[build]
  dockerfile = "Dockerfile"

[env]
  NODE_ENV = "production"
  PORT = "3000"
  DB_PATH = "/data/linear-bot.db"

[deploy]
  strategy = "immediate"

[http_service]
  internal_port = 3000
  force_https = true
  auto_stop_machines = false
  auto_start_machines = true
  min_machines_running = 1
  max_machines_running = 1
  processes = ["app"]

[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 512

[[mounts]]
  source = "linear_bot_data"
  destination = "/data"

